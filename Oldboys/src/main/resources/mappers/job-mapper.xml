<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC
"-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jobMapper">

	<select id="selectJobList" parameterType="_int" resultType="Job">
		SELECT * FROM JOB
		WHERE USERNO = #{userNo}
		ORDER BY JOBCODE DESC
	</select>

	<insert id="insertJob" parameterType="Job">
		INSERT INTO JOB
		VALUES (#{jobCode}, #{jobName}) 	
	</insert>
	
	<delete id="deleteJob" parameterType="Job">
		DELETE FROM JOB
		WHERE JOBCODE = #{jobCode}
	</delete>
	
	<update id="updateJob" parameterType="Job">
		UPDATE JOB
		
		<set>
		JOBCODE = #{jobCode},
		JOBNAME = #{jobName}
		</set>
		
		WHERE JOBCODE = #{jobCode}
	</update>
	
</mapper>










